<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="error-pattern">
            %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{5} - %msg%n
        </Property>
        <Property name="console-pattern">
            %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{1} - %msg%n
        </Property>
        <Property name="filename">logs/log.log</Property>
    </Properties>
    <Appenders>
        <RollingFile name="File" fileName="${filename}" append="true"
                     filePattern = "logs/${date:yyyy-MM-dd}/%d{yyyy-MM-dd_HH-mm}_%i.log">
            <PatternLayout pattern="${error-pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="50 KB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${console-pattern}"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="error">
            <AppenderRef ref="Console" level = "error"/>
        </Root>

        <Logger name="by.training.task04.dao.impl.TextDaoImpl" level="info" additivity="true">
            <AppenderRef ref="File" level="error"/>
            <AppenderRef ref="Console" level = "info"/>
        </Logger>

        <Logger name="by.training.task04.repository.impl.RepositoryImpl" level="info" additivity="true">
            <AppenderRef ref="File" level="error"/>
            <AppenderRef ref="Console" level = "info"/>
        </Logger>

        <Logger name="by.training.task04.util.Parser" level="info" additivity="true">
            <AppenderRef ref="File" level="error"/>
            <AppenderRef ref="Console" level = "info"/>
        </Logger>

        <Logger name="by.training.task04.util.TextGenerator" level="info" additivity="true">
            <AppenderRef ref="File" level="error"/>
            <AppenderRef ref="Console" level = "info"/>
        </Logger>

    </Loggers>
</Configuration>